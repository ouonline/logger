# This Makefile is generated by omake: https://github.com/ouonline/omake.git

CC := gcc
AR := ar

ifeq ($(debug), y)
	CFLAGS := -g
else
	CFLAGS := -O2 -DNDEBUG
endif
CFLAGS := $(CFLAGS) -Wall -Werror -Wextra -fPIC

TARGET := test_logger

.PHONY: all clean

all: $(TARGET)

test_logger_OBJS := ./test_logger.c.test_logger.o

test_logger_INCLUDE := -I../..

test_logger_LIBS := ../liblogger.a ../../utils/libutils.a -lpthread

./test_logger.c.test_logger.o: ./test_logger.c
	$(CC) $(CFLAGS) $(test_logger_INCLUDE) -c $< -o $@

.PHONY: test_logger_pre_process

$(test_logger_OBJS): | test_logger_pre_process

test_logger_pre_process:
	$(MAKE) debug=$(debug) -C ..
	$(MAKE) debug=$(debug) -C ../../utils

test_logger: $(test_logger_OBJS)
	$(CC) $(CFLAGS) -o $@ $^ $(test_logger_LIBS)

clean:
	rm -f $(TARGET) $(test_logger_OBJS)
